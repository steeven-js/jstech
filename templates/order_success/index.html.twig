{% extends 'base.html.twig' %}

{% block title %}Confirmation de commande - JSTech{% endblock %}

{% block content %}

{# {{ dump(order) }} #}

<!-- ...:::: Start Breadcrumb Section:::... -->
<div class="breadcrumb-section breadcrumb-bg-color--golden">
    <div class="breadcrumb-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="breadcrumb-title">Commande validé</h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                        <nav aria-label="breadcrumb">
                            <ul>
                                <li><a href="{{ path('app_home') }}">Accueil</a></li>
                                <li><a href="{{ path('app_account') }}">Mon compte</a></li>
                                <li class="active" aria-current="page">Commande validé</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- ...:::: End Breadcrumb Section:::... -->

    <div class="container">
        <h3>Bonjour <b>{{order.user.firstName}} {{order.user.lastName}}</b></h3>
        <br>
        <ul style="list-style:none;">
            <li>Nous vous remercions pour votre commande n° <b>{{order.reference}}</b></li>
            <li>Une confirmation vient de vous être envoyée par email à l'adresse : {{order.user.email}}</li>

            <br>

            <li>Votre commande sera livrée par <b>{{order.carrierName}}</b> à l'adresse suivante :</li>
            <li>{{ order.delivery | raw }}</li>{# |raw : permet de prendre en compte les <br> contenu dans delivery#}

            <br>

            <li>Pour suivre votre commande, rendez-vous dans votre <a href="{{path('app_account')}}"><b>compte </b></a></li>
        </ul>
    </div>
</section>

{% endblock %}
