{% extends 'base.html.twig' %}

{% block title %}{{category.name}}{% endblock %}


{% block content %}

<section class="section gallery">
    <div class="heading">
        <h2 class="font-weight-bold">{{category.name}}</h2>
    </div>
    <div class="container">
        <a class="btn btn-second" href="{{path('app_nos_category')}}"><i class="fa-solid fa-arrow-left"></i> Tous Nos Produits</a>
        <div class="row mt-5 pt-2 ">
            <div class="col-md-12 text-center mb-5">
                <div class="row product-container">

                    {# {% for product in category.products %}
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            {{ dump(product) }}
                        </div>
                    {% endfor %} #}

                    {% for product in category.products %}
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="block">
                            
                                <div class="gallery-overlay">
                                    <a href="{{path('app_product', {'slug' : product.slug})}}" class="gallery-popup">
                                        <i class="fa-solid fa-plus"></i>
                                    </a>
                                </div>
                                <img class="img-fluid w-100" src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid">
                                
                            </div>
                            <p class="price mt-3">{{(product.price/100) |number_format(2, ',', '.')}} â‚¬</p>
                            <div class="product-info">
                                <a class="link-title" href="{{path('app_product', {'slug' : product.slug})}}">
                                    <h4>{{product.name}}</h4>
                                </a>
                                <p>{{product.subtitle}}</p>
                            </div>
                        </div>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}