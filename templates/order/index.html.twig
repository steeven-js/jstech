{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block content %}

	<section class="commande-page">

		<div class="container">
			<h2>Je passe ma commande</h2>
			<p><b>Choisissez vos préférences avant de passer commande sur JSTech.</b></p>

			<a href="{{path('app_account_address_add')}}" class="btn">Ajouter une nouvelle adresse</a>

			<div class="row row-2">
				<div class="adresses col-2">
					{% set formHtml %}
						{{ form_start( form, {action : path('app_order_recap')} )}}
							
						{{ form_end(form) }}
					{% endset %}

					{{formHtml|replace({'[br]' : '<br>'})|raw}}
					
				</div>
				<div class="commande-product col-2">

				{# {{dump(cart)}} #}
				<div>
					<p><b>Retrouver le récapitulatif de vos produits</b></p>
				</div>

				<div class="order-sumary">

					{# key permet de compter... #}
					
						{% for key,product in cart %}
							<div class="summary">
								<div>
									<img width="75px" src="/uploads/{{product.product.illustration}}"alt="{{product.product.name}}"> 
								</div>
								<div>
									{{product.product.name}} <small>({{product.product.subtitle}})</small>
								</div>
								<div>
									x {{product.quantity}} &nbsp;&nbsp;
								</div>
							</div>
						{% endfor %}
				</div>

			</div>

		</div>

	</section>

{% endblock %}