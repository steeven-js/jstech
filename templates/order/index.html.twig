{% extends 'base.html.twig' %}

{% block title %}Valider ma commande
{% endblock %}

{% block content %}
<section class="section">
    <div class="container">
        <h2>Je passe ma commande</h2>
        <p>Choisissez vos préférences avant de passer commande sur la boutique française.</p>
        <hr>
        <div class="row">
            <div class="col-md-6">
                {% set formHtml %}
                {{ form_start( form, {action : path('app_order_recap')} )}}
                {{ form_label(form.address, 'Choisissez votre adresse de livraison') }}
                <a href="{{path('app_account_address_add')}}">Ajouter une nouvelle adresse</a>
                {{ form_end(form) }}
                {{form_end(form)}}
                {% endset %}
                {{formHtml|replace({'[br]' : '<br>'})|raw}}
            </div>
            <div class="col-md-6">
                {# {{dump(cart)}} #}
                <div class="text-center text-center mt-3 mb-4">
                    <p><b>Retrouver le récapitulatif de vos produits</b></p>
                </div>
                <div class="order-sumary">
                    {# key permet de compter... #}
                    {% for key,product in cart %}
                    <div class="row {% if key > 0 %} mt-2 {% endif %}">
                        <div class="col-2">
                            <img class="p-1 mx-1 my-0" height="75px" src="/uploads/{{product.product.illustration}}"
                                alt="{{product.product.name}}"><br>
                        </div>
                        <div class="col-8 my-auto">
                            {{product.product.name}} <small>({{product.product.subtitle}})</small>
                        </div>
                        <div class="col-2 my-auto">
                            x {{product.quantity}} &nbsp;&nbsp;
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}