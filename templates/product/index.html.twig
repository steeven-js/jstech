{% extends 'base.html.twig' %}

{% block title %}Nos produit
{% endblock %}

{% block content %}
	<section class="section gallery">
		<div class="container">
			<div class="row">
				<div class="col-12 text-center mb-5">
					<h1 class="font-weight-bold">Nos montres connectées</h1>
				</div>

				{% for product in products %}
					<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
						<div class="product-item text-center">
							<a href="{{path('app_product', {'slug' : product.slug})}}"><img src="/uploads/{{product.illustration}}" alt="{{product.name}}" class="img-fluid"></a>

							<h5>{{product.name}}</h5>
							<span>{{product.subtitle}}</span>
							<span>{{(product.price/100) |number_format(2, ',', '.')}}
								€</span>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>


{% endblock %}
