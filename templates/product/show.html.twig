{% extends 'base.html.twig' %}

{% block title %}
	{{product.name}}
{% endblock %}

{% block content %}
	<section class="section gallery">
		<div class="container">
			<div class="row">
				<div class="col-md-5 mb-4 mb-md-0">
					<div class="product_image">
						<img src="/uploads/{{ product.illustration}}" alt="{{product.name}}">
					</div>
				</div>

				<div class="col-lg-6 col-md-7 offset-lg-1">
					<h1 class="mb-4">{{product.name}}</h3>
					<h3>{{product.subtitle}}</h3>
					<p class="price py-4">{{(product.price/100) |number_format(2, ',', '.')}}
						â‚¬</p>
					<hr>
					<p>
						{{product.description}}
					</p>
					<a href="{{path('add_to_cart', {'id' : product.id})}}" class="btn btn-main">Ajouter au panier</a>
				</div>
			</div>
		</div>
	</section>


{% endblock %}
