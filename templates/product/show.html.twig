{% extends 'base.html.twig' %}

{% block title %}
	{{product.name}}
{% endblock %}

{% block content %}
	<section class="section gallery">
		<div class="container">
		<a class="btn btn-second" href="#" onclick="history.back()"><i class="fa-solid fa-arrow-left"></i> Retour</a>
		<br>
			<div class="row mt-5 pt-2 ">
				{# Gauche #}
				<div class="col-md-5 mb-4 mb-md-0">
					<div class="product_image">{# Conatainer de la gallerie #}

						<!-- Full-width images with number text -->
						<div class="mySlides">
							<div class="numbertext">1 / 4</div>
							<img src="/uploads/{{ product.illustration}}" alt="{{product.name}}" style="width:100%">
						</div>

						<div class="mySlides">
							<div class="numbertext">2 / 4</div>
							<img src="/uploads/{{ product.illustration1}}" alt="{{product.name}}" style="width:100%">
						</div>

						<div class="mySlides">
							<div class="numbertext">3 / 4</div>
							<img src="/uploads/{{ product.illustration2}}" alt="{{product.name}}" style="width:100%">
						</div>

						<div class="mySlides">
							<div class="numbertext">4 / 4</div>
							<img src="/uploads/{{ product.illustration3}}" alt="{{product.name}}" style="width:100%">
						</div>

						<!-- Next and previous buttons -->
						<a class="prev" onclick="plusSlides(-1)">&#10094;</a>
						<a class="next" onclick="plusSlides(1)">&#10095;</a>


						<!-- Thumbnail images -->
						<div class="row justify-content-center">
							<div class="column m-1">
								<img class="demo cursor" src="/uploads/{{ product.illustration}}" style="width:100%" onclick="currentSlide(1)" alt="The Woods">
							</div>
							<div class="column m-1">
								<img class="demo cursor" src="/uploads/{{ product.illustration1}}" style="width:100%" onclick="currentSlide(2)" alt="Cinque Terre">
							</div>
							<div class="column m-1">
								<img class="demo cursor" src="/uploads/{{ product.illustration2}}" style="width:100%" onclick="currentSlide(3)" alt="Mountains and fjords">
							</div>
							<div class="column m-1">
								<img class="demo cursor" src="/uploads/{{ product.illustration3}}" style="width:100%" onclick="currentSlide(4)" alt="Northern Lights">
							</div>
						</div>
						
					</div>
				</div>
				{# Droite #}
				<div class="col-lg-6 col-md-7 offset-lg-1">
					<h1 class="mb-4">{{product.name}}</h3>
					<h3>{{product.subtitle}}</h3>
					<p class="price py-4">{{(product.price/100) |number_format(2, ',', '.')}} â‚¬</p>
					<hr>
					<p>{{product.description}}</p>
					<a href="{{path('add_to_cart', {'id' : product.id})}}" class="btn btn-main">Ajouter au panier</a>
				</div>
			</div>
		</div>
	</section>


{% endblock %}
