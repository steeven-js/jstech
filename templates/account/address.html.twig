{% extends 'base.html.twig' %}

{% block title %} Ajouter une adresse {% endblock %}


{% block content %}
<div class="small-container">
    <h2 class="title">Mes adresses</h2>
	<div class="row row-2">

        {% for address in app.user.addresses %}
            <!-- product -->
            <div class="col-4">
                {# {{dump(address)}} #}
                <h5 class="card-title">{{address.name}}</h5>
                <p class="card-text">{{address.address}} <br>
                    {{address.postal}} - {{address.city}} - {{address.country}}
                </p>
                {# Je passe en paramÃ¨tre l'id de l'adresse que je souhaite modifier #}
                <a href="{{path('app_account_address_edit', {'id' : address.id})}}" class="">Modifier</a>
                |
                <a href="{{path('app_account_address_delete', {'id' : address.id})}}" class="">Supprimer</a>
            </div>
            <!-- /product -->
        {% endfor %}

    </div>
</div>

{% endblock %}