{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse
{% endblock %}


{% block content %}
<section class="section">
    <div class="container">

        <h1>Mes commandes</h1>

        <p class="mb-4">C'est dans cet espace que vous allez pouvoir gérer toutes vos commandes.</p>

        <a href="{{ path('app_account') }}" class="btn btn-second"><i class="fa-solid fa-arrow-left"></i> Mon compte</a><br>

        {% if orders|length == 0 %}
            <div class="col-md-12 m-4 text-center">
                <p>Vous n'avez pas encore passé de commande sur JSTech.</p>
                <p>N'hésitez pas! <a href="{{ path('app_nos_category')}}">Découvrez l'ensemble de nos produits.</a></p>
            </div>
        {% else %}
            <table class="table mt-4">
                <thead>
                    <tr>
						<th scope="col">Référence</th>
						<th scope="col">Statut</th>
                        <th scope="col">Passé le</th>
						<th scope="col">Produit(s)</th>
						<th scope="col">Total</th>
						<th scope="col"></th>
                    </tr>
                </thead>
                <div class="row">
                    {% for order in orders %}
                        {# {{dump(order)}} #}
                        <tr>
                            <td>{{ order.reference }}</td>
                            <td>
                                {% if order.state == 1 %}
                                    Paiement accepté
                                {% elseif order.state == 2 %}
                                    Préparation en cours
                                {% elseif order.state == 3 %}
                                    Livraison en cours
                                {% endif %}
                            </td>
                            <td><span>{{ order.createdAt|date("{m/d/Y}") }}</span></td>
                            <td>{{ order.orderDetails|length }}</td>
                            <td>{{ ((order.carrierPrice + order.getTotal) / 100)|number_format(2, ',', '.') }} €</td>
                            <td class="text-right"><a class="btn btn-info" href="{{ path('app_account_order_show', {'reference' : order.reference}) }}">Voir ma commande</a></td>
                        </tr>
                    {% endfor %}
                </div>
            </table>

        {% endif %}
    </div>
</section>

{% endblock %}