{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}


{% block content %}
    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section breadcrumb-bg-color--golden">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h3 class="breadcrumb-title">Mes commandes</h3>
                        <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="{{ path('app_home') }}">Accueil</a></li>
                                    <li><a href="{{ path('app_account') }}">Mon compte</a></li>
                                    <li class="active" aria-current="page">Mes commandes</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->

    <!-- ...:::: Start Account Dashboard Section:::... -->
    <div class="account-dashboard">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button" data-aos="fade-up" data-aos-delay="0">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <li><a href="{{ path('app_account') }}"
                                    class="nav-link btn btn-block btn-md btn-black-default-hover active">Dashboard</a>
                            </li>
                            <li> <a href="/admin"
                                    class="nav-link btn btn-block btn-md btn-black-default-hover">Accéder au backoffice</a></li>
                            <li> <a href="{{ path('app_account_order') }}"
                                    class="nav-link btn btn-block btn-md btn-black-default-hover">Gérer mes commandes</a></li>
                            <li><a href="{{ path('app_account_address') }}"
                                    class="nav-link btn btn-block btn-md btn-black-default-hover">Gérer mes adresses</a></li>
                            <li><a href="{{ path('app_account_address_add') }}"
                                    class="nav-link btn btn-block btn-md btn-black-default-hover">Ajouter une adresses</a></li>
                            <li><a href="{{ path('app_account_password') }}"
									class="nav-link btn btn-block btn-md btn-black-default-hover">Modifier mon mot de passe</a></li>
                        </ul>
                    </div>
                </div>

                
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content" data-aos="fade-up" data-aos-delay="200">
                        <h4>Vos Commandes</h4>
                        <div class="table_page table-responsive">
                            {% if orders|length == 0 %}
                                <div class="col-md-12 m-4 text-center">
                                    <p>Vous n'avez pas encore passé de commande sur JSTech.</p>
                                    <p>N'hésitez pas! <a href="{{ path('app_nos_category')}}">Découvrez l'ensemble de nos produits.</a></p>
                                </div>
                            {% else %}

                            <table>
                                <thead>
                                    <tr>
                                        <th>Référence</th>
                                        <th>Statut</th>
                                        <th>Passé le</th>
                                        <th>Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for order in orders %}
                                    {# {{dump(order)}} #}
                                    <tr>
                                        <td>{{ order.id }}</td>
                                        <td>
                                            {% if order.state == 1 %}
                                                Paiement accepté
                                            {% elseif order.state == 2 %}
                                                Préparation en cours
                                            {% elseif order.state == 3 %}
                                                Livraison en cours
                                            {% endif %}
                                        </td>
                                        <td><span>{{ order.createdAt|date("m/d/Y") }}</span></td>
                                        <td>{{ ((order.carrierPrice + order.getTotal) / 100)|number_format(2, ',', '.') }} €</td>
                                        <td>
                                            <a class="view" href="{{ path('app_account_order_show', {'reference' : order.reference}) }}">Voir ma commande</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Account Dashboard Section:::... -->
{% endblock %}